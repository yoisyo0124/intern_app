<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<% @post = Post.find_by(id: params[:id])
@user = User.find_by(id: 1) %>
<p><%= link_to(@user.name,"users/#{@user.id}") %></p>
<table class="table">
  <thead>
    <tr>
      <th>Post</th>
      <th>Amazon</th>
      <th>Hulu</th>
      <th>Youtube</th>
      <th>User_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post %></td>
        <td><%= post.amazon %></td>
        <td><%= post.hulu %></td>
        <td><%= post.youtube %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post, class:"btn btn-outline-info" %></td>
        <td><%= link_to 'Edit', edit_post_path(post) , class:"btn btn-outline-info"%></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-outline-info"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Post', new_post_path , class:"btn btn-primary"%>
<%= link_to 'Likes', "/users/#{@user.id}/likes" %>
<%= link_to "ログアウト", logout_path, method: :delete %>
